@if(Request.IsAuthenticated) {
    <text>Welcome <b>@Context.User.Identity.Name</b>!
    [ @Html.ActionLink("Sign Out", "LogOff", "Account") ]</text>
}
else {
    @:[ @Html.ActionLink("Sign In", "LogOn", "Account") ]
}

@{
    var loginStatus = Request.IsAuthenticated ? "LoggedIn" : "LoggedOut";
}
<input id="login-status" type="hidden" value="@loginStatus" />
